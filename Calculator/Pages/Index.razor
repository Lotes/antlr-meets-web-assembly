@page "/"
@using Calculator.Language

<h1>Calculator</h1>

Formula:<br/>

<textarea name="formula" @bind="@input"></textarea><br />

Result: @result<br />

<button class="btn btn-primary" @onclick="Calculate">Click me</button>

@code {
    private string input;
    private double result;

    private void Calculate()
    {
        result = new Calculator().Calculate(input);
    }
}